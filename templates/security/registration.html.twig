{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block description %}Page d'inscription {% endblock %}

{% block body %}
    <a class="offset-2 col-8 text-center oi oi-account-login icon-form"></a>
    {% if editMode %}
        <h1 class="registration">Modifier les informations</h1>
    {% else %}
        <h1 class="registration">Inscription</h1>
    {% endif %}
    <div class="offset-2 col-8 text-center">
        {{ form_start(form) }}
        {{ form_widget(form) }}

        {% if editMode %}
            <button class="btn btn-outline-success center">Valider les modifications</button>
        {% else %}
            <button class="btn btn-outline-success center">S'inscrire</button>
        {% endif %}
        {{ form_end(form) }}
    </div>

{% endblock %}
