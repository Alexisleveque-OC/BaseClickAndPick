<div class="modal fade" id="UserAddNoteModal" tabindex="-1" role="dialog" aria-labelledby="UserAddNoteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="UserAddNoteModalLabel">Ajouter une note</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formAddNote, {
                    'attr' : {'id' : 'formAddNote'}
                }) }}
                {{ form_widget(formAddNote) }}
            </div>
            <div class="modal-footer">
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Enregistrer">
                </div>
                {{ form_end(formAddNote) }}
            </div>
        </div>
    </div>
</div>