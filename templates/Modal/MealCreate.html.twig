<div class="modal fade" id="MealCreateModal" tabindex="-1" role="dialog" aria-labelledby="mealCreateModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mealCreateModalLabel">Cr√©er un plat</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formMeal, {
                    'action': path('meal_create') ,
                    'attr' : {'id' : 'form-create'}
                }) }}
                {{ form_row(formMeal.name) }}
                {{ form_row(formMeal.price) }}
                {{ form_row(formMeal.sellTo) }}
                {{ form_row(formMeal.category, {'attr' : {"style": "display:none"}}) }}
            </div>
            <div class="modal-footer">
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Enregistrer">
                </div>
                {{ form_end(formMeal) }}
            </div>
        </div>
    </div>
</div>